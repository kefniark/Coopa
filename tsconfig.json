{
	"compilerOptions": {
		// build
		"typeRoots": ["node_modules/@types"],
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"outDir": "./build",
		"declarationDir": "./build/declarations/",
		"types": ["node"],
		"module": "commonjs",

		// build settings
		"sourceMap": false,
		"pretty": true,
		"declaration": true,
		"preserveConstEnums": true,

		// strict
		"strict": true,
		"alwaysStrict": true,
		"strictPropertyInitialization": false,
		"noEmit": false,
		"importHelpers": false,
		"noEmitHelpers": false,
		"noEmitOnError": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
	},
	"include":[
		"./src/**/*"
	],
	"exclude": [
		"./tests/**/*",
		"./node_modules",
		"./build",
		"./docs"
	]
}